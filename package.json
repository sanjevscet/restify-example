{
    "name": "crm-web",
    "version": "1.0.0",
    "description": "A Restify, Inversify starter",
    "main": "server.ts",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"*/**/*.ts\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "restify": "8.3.3",
        "restify-plugins": "1.6.0",
        "inversify": "5.0.1",
        "inversify-restify-utils": "3.4.0",
        "restify-errors": "8.0.1",
        "reflect-metadata": "0.1.13",
        "@hapi/joi": "15.1.0"
    },
    "devDependencies": {
        "@types/node": "10.14.1",
        "@types/reflect-metadata": "0.1.0",
        "@typescript-eslint/eslint-plugin": "1.13.0",
        "@types/hapi__joi": "15.0.3",
        "@types/restify": "7.2.12",
        "@types/restify-errors": "4.3.3",
        "@typescript-eslint/parser": "1.13.0",
        "eslint-config-prettier": "6.0.0",
        "eslint-plugin-prettier": "3.1.0",
        "typescript": "3.5.3",
        "eslint": "6.1.0",
        "prettier": "1.18.2",
        "nodemon": "1.19.1",
        "concurrently": "4.1.1"
    },
    "author": "Goavega Software",
    "license": "MIT"
}
